@using System.ComponentModel
@using AntDesign.TableModels
@using AntDesign.Core.Extensions
@using Entities;

<div class="container mt-5">
    <div class="row">
        <!-- Left Column - Add Services -->
        <div class="col-md-6 order-md-0">
            <div class="row">
                <div class="col-md-12">
                    <div class="d-flex">
                        <input type="text" placeholder="Enter Customer Name" class="form-control me-2" />
                        <input type="text" placeholder="Enter Customer Mobile Number" class="form-control" />
                    </div>
                </div>
            </div>
            <i class="fas fa-cloud"></i>
            <div class="row mt-2">
                <div class="col-md-12">
                    <TreeSelect TItem="string"
                                Style="width:100%;"
                    @bind-Values="values"
                                DropdownStyle="max-height:400px;overflow:auto;"
                                Placeholder="Please select"
                                                    AllowClear
                                                    Multiple
                                                    TreeDefaultExpandAll
                                                    EnableSearch
                                MatchedStyle="font-weight: bold">
                       
                            
                                <TreeNode TItem="string"  Title="Employee 1" />
                        <TreeNode TItem="string" Title="Employee 2" />
                        <TreeNode TItem="string" Title="Employee 3" />
                           
                        
                    </TreeSelect>
                        @*@JsonSerializer.Serialize(values);*@

                   
                </div>
            </div>
            <div class="row mt-4 border-top">
                <div class="col-md-12">
                    <h3 class="pt-2">Add Services</h3>
                    <div style="height:430px; overflow-y:scroll; padding:20px">
                        @for (int i = 0; i < 20; i++)
                        {
                            <div class="d-flex justify-content-between mb-2 border-bottom">
                                <p>@(i + 1)</p>
                                <p>Service Name</p>
                                <p>Rs.10</p>
                                <button class="btn btn-sm btn-primary me-2">Add</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Billing Summary</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Service Name</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 3; i++)
                            {
                                <tr>
                                    <td>@{
                                            var index = i + 1;
                                        }@index</td>
                                    <td>Service Name</td>
                                    <td>200</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-8"><strong>Grand Total</strong></div>
                        <div class="col-4">1000</div>
                    </div>
                    <div class="text-center mt-3">
                        <button class="btn btn-primary">Add Tip</button>
                    </div>
                    <div class="row mt-3">
                        <div class="col-8"><strong>Change</strong></div>
                        <div class="col-4">0</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-8"><strong>Payable Amount</strong></div>
                        <div class="col-4">0</div>
                    </div>
                    <div class="text-center mt-4">
                        <button class="btn btn-success">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    private IEnumerable<string> values = new[] { "leaf1",  "leaf2", "leaf3" };
    private EntEmployee[] data = new EntEmployee[]
    {
    new EntEmployee {},
    new EntEmployee { }
    };
}
